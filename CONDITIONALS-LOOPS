9.PERIMETER OF EQALATERAL TRIANGLE
import java.util.Scanner;

public class EquilateralTrianglePerimeter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the length of the side of the equilateral triangle: ");
        double side = scanner.nextDouble();

        double perimeter = calculatePerimeter(side);
        System.out.println("Perimeter of the equilateral triangle: " + perimeter);

        scanner.close();
    }

    public static double calculatePerimeter(double side) {
        return 3 * side; // Formula to calculate the perimeter of an equilateral triangle
    }
}

10.PERIMETER OF PARLLELOGRAM

import java.util.Scanner;

public class ParallelogramPerimeter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the length of the parallelogram: ");
        double length = scanner.nextDouble();

        System.out.print("Enter the breadth of the parallelogram: ");
        double breadth = scanner.nextDouble();

        double perimeter = calculatePerimeter(length, breadth);
        System.out.println("Perimeter of the parallelogram: " + perimeter);

        scanner.close();
    }

    public static double calculatePerimeter(double length, double breadth) {
        return 2 * (length + breadth);
    }
}


11.PERIMETER OF RECTANGLE

import java.util.Scanner;

public class RectanglePerimeter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the length of the rectangle: ");
        double length = scanner.nextDouble();

        System.out.print("Enter the width of the rectangle: ");
        double width = scanner.nextDouble();

        double perimeter = calculatePerimeter(length, width);
        System.out.println("Perimeter of the rectangle: " + perimeter);

        scanner.close();
    }

    public static double calculatePerimeter(double length, double width) {
        return 2 * (length + width);
    }
}

12.PERIMETER OF SQUARE

import java.util.Scanner;

public class SquarePerimeter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the length of a side of the square: ");
        double side = scanner.nextDouble();

        double perimeter = calculatePerimeter(side);
        System.out.println("Perimeter of the square: " + perimeter);

        scanner.close();
    }

    public static double calculatePerimeter(double side) {
        return 4 * side;
    }
}

13.PERIMETER OF RHOMBUS
import java.util.Scanner;

public class RhombusPerimeter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the length of a side of the rhombus: ");
        double side = scanner.nextDouble();

        double perimeter = calculatePerimeter(side);
        System.out.println("Perimeter of the rhombus: " + perimeter);

        scanner.close();
    }

    public static double calculatePerimeter(double side) {
        return 4 * side;
    }
}


14.VOLUME OF CONE

import java.util.Scanner;

public class ConeVolume {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the radius of the cone (in cm): ");
        double radius = scanner.nextDouble();

        System.out.print("Enter the height of the cone (in cm): ");
        double height = scanner.nextDouble();

        double volume = calculateVolume(radius, height);
        System.out.println("Volume of the cone: " + volume + " cubic cm");

        scanner.close();
    }

    public static double calculateVolume(double radius, double height) {
        // Volume of a cone formula: V = (1/3) * Ï€ * r^2 * h
        return (1.0 / 3.0) * Math.PI * Math.pow(radius, 2) * height;
    }
}

15.VOLUME OF PRISM

import java.util.Scanner;

public class PrismVolume {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the area of the base of the prism: ");
        double baseArea = scanner.nextDouble();

        System.out.print("Enter the height of the prism: ");
        double height = scanner.nextDouble();

        double volume = calculateVolume(baseArea, height);
        System.out.println("Volume of the prism: " + volume);

        scanner.close();
    }

    public static double calculateVolume(double baseArea, double height) {
        // Volume of a prism formula: V = baseArea * height
        return baseArea * height;
    }
}



